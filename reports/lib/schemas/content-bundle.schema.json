{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "content-bundle",
  "title": "ContentBundle",
  "description": "Structured content for report generation - prose only, no HTML",
  "type": "object",
  "required": ["metadata", "headline", "sections"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["sessionId", "theme", "generatedAt"],
      "properties": {
        "sessionId": {
          "type": "string",
          "description": "Unique session identifier"
        },
        "theme": {
          "type": "string",
          "enum": ["journalist", "detective"],
          "description": "Report theme determining template selection"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "version": {
          "type": "string",
          "default": "1.0.0",
          "description": "Schema version for future compatibility"
        }
      },
      "additionalProperties": false
    },
    "headline": {
      "type": "object",
      "required": ["main"],
      "properties": {
        "main": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200,
          "description": "Primary headline text"
        },
        "kicker": {
          "type": "string",
          "maxLength": 100,
          "description": "Small text above main headline"
        },
        "deck": {
          "type": "string",
          "maxLength": 300,
          "description": "Subheadline summarizing the article"
        }
      },
      "additionalProperties": false
    },
    "byline": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "description": "Author name"
        },
        "title": {
          "type": "string",
          "description": "Author title/role"
        },
        "location": {
          "type": "string",
          "description": "Reporting location"
        },
        "date": {
          "type": "string",
          "description": "Publication date display string"
        }
      },
      "additionalProperties": false
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered list of article sections",
      "items": {
        "type": "object",
        "required": ["id", "type", "content"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique section identifier"
          },
          "type": {
            "type": "string",
            "enum": ["narrative", "evidence-highlight", "investigation-notes", "conclusion", "case-summary"],
            "description": "Section type for styling"
          },
          "heading": {
            "type": "string",
            "description": "Optional section heading"
          },
          "content": {
            "type": "array",
            "description": "Content blocks within section",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "required": ["type", "text"],
                  "properties": {
                    "type": { "const": "paragraph" },
                    "text": { "type": "string", "minLength": 1 }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "text", "attribution"],
                  "properties": {
                    "type": { "const": "quote" },
                    "text": { "type": "string" },
                    "attribution": { "type": "string" }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "tokenId"],
                  "properties": {
                    "type": { "const": "evidence-reference" },
                    "tokenId": { "type": "string" },
                    "caption": { "type": "string" }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "items"],
                  "properties": {
                    "type": { "const": "list" },
                    "ordered": { "type": "boolean", "default": false },
                    "items": {
                      "type": "array",
                      "items": { "type": "string" },
                      "minItems": 1
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    },
    "pullQuotes": {
      "type": "array",
      "description": "Featured quotes for sidebar display",
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": { "type": "string" },
          "attribution": { "type": "string" },
          "placement": {
            "type": "string",
            "enum": ["left", "right", "center"],
            "default": "right"
          }
        },
        "additionalProperties": false
      }
    },
    "evidenceCards": {
      "type": "array",
      "description": "Key evidence items for sidebar display",
      "items": {
        "type": "object",
        "required": ["tokenId", "headline"],
        "properties": {
          "tokenId": { "type": "string" },
          "headline": { "type": "string" },
          "summary": { "type": "string" },
          "significance": {
            "type": "string",
            "enum": ["critical", "supporting", "contextual"],
            "default": "supporting"
          }
        },
        "additionalProperties": false
      }
    },
    "financialTracker": {
      "type": "object",
      "description": "Money trail tracking for journalist theme",
      "properties": {
        "entries": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "amount"],
            "properties": {
              "date": { "type": "string" },
              "description": { "type": "string" },
              "amount": { "type": "string" },
              "category": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "totalExposed": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
