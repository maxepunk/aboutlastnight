# About Last Night Test Suite Configuration
# Copy this file to .env and customize as needed

# Test mode (quick or comprehensive)
# Quick mode: Fast tests for pre-commit (<10s)
# Comprehensive mode: Full test suite for pre-deployment (1-2min)
TEST_MODE=quick

# Base URL for testing
# Local development: http://localhost:8000
# Production site: https://aboutlastnightgame.com
BASE_URL=http://localhost:8000

# Auto-start local HTTP server for testing
# true: Tests will start Python server automatically
# false: Tests expect server already running or use production URL
USE_LOCAL_SERVER=true

# Mock Google Apps Script backends
# true: Intercept and mock backend responses (fast, no side effects)
# false: Test against real Google Apps Script endpoints
MOCK_BACKENDS=true

# Google Apps Script endpoints (for comprehensive tests)
# Get these from Google Apps Script deployments
# GOOGLE_SCRIPT_INTEREST_ENDPOINT=https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec
# GOOGLE_SCRIPT_PLAYTEST_ENDPOINT=https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec

# Test data
# TEST_EMAIL=test@example.com
# TEST_NAME=Test User

# Playwright options
# HEADLESS=false  # Show browser during tests (useful for debugging)
# SLOWMO=100      # Slow down operations by N milliseconds
